{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "input_schema.json",

    "definitions": {
        "name":   {
            "type": "string",
            "default": "Quantum Chemistry experiment"
         },
        "driver": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "default": "HDF5"
                 },
                "hdf5_output": {
                    "type": ["string","null"],
                    "default" : null
                }
            },
            "required": ["name"],
            "additionalProperties": false
        }
    },

    "type": "object",
    "properties": {
        "name":             { "$ref": "#/definitions/name" },
        "driver":           { "$ref": "#/definitions/driver" }
    },
    "required": ["driver"],
    "additionalProperties": false
}